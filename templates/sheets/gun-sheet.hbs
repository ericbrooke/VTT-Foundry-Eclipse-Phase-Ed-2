<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div class="sheet-content">
      <table>
          <tr>
            <th>{{localize "ep2.weapon.weaponType"}}</th>
            <th>{{localize "ep2.weapon.damageValue"}}</th>
            <th>{{localize "ep2.weapon.ammo"}}</th>
            <th>{{localize "ep2.weapon.firingModes"}}</th>
          </tr>
          <tr>
            <td>
              <select name="data.weaponTypes">
                {{#select data.weaponTypes}}
                {{#each config.weaponTypes as |name type|}}
                <option value="{{type}}">{{localize name}}</option>
                {{/each}}
                {{/select}}
              </select>
            </td>
            <td>
              <input name="data.damageValue" type="text" value="{{data.damageValue}}" data-dtype="String" />
            </td>
            <td>
              <input name="data.ammo" type="text" value="{{data.ammo}}" data-dtype="Number" />
            </td>
            <td>
              <input name=“data.singleShot” type=“checkbox” {{checked data.singleShot}} />
            </td>
          </tr>
          <tr>
            <th>{{localize "ep2.weapon.range"}}</th>
            <th>{{localize "ep2.weapon.complexity"}}</th>
            <th>{{localize "ep2.weapon.WareType"}}</th>
          </tr>
          <tr>
            <td>
              <input name="data.range" type="text" value="{{data.range}}" data-dtype="Number" />
            </td>
            <td>
              <input name="data.complexity" type="text" value="{{data.complexity}}" data-dtype="String" />
            </td>
            <td>
              <input name="data.WareType" type="text" value="{{data.WareType}}" data-dtype="String" />
            </td>
          </tr>
        </table>
        {{editor content=data.description target="data.description" button=true owner=owner editable=editable }}
    </div>
</form>
